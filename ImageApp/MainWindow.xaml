<Window x:Class="ImageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="700">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel>

                <Button Height="50" VerticalAlignment="Top" Content="Download images" Command="{Binding DownloadImagesCommand}"/>
                <Image x:Name="TempImage"></Image>
                <StackPanel x:Name="StackP" ScrollViewer.CanContentScroll="True" Orientation="Horizontal">

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
